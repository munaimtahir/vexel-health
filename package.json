{
  "name": "vexel-health-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "docker compose up",
    "deploy:dev": "bash ./scripts/deploy-dev.sh",
    "db:push:dev": "docker compose exec -T api npx prisma db push --schema prisma/schema.prisma --accept-data-loss",
    "seed:dev": "docker compose exec -T api node prisma/seed-dev.js",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "contracts:generate": "npm run generate --workspace=@vexel/contracts",
    "postinstall": "npx prisma generate --schema apps/api/prisma/schema.prisma"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "prettier": "^3.4.2",
    "@types/node": "^22.10.7"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "ajv": "^8.18.0",
    "eslint": "^9.18.0"
  }
}
